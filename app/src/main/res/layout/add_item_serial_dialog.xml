<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="500dp"
    android:layout_height="320dp"
    android:minWidth="500dp"
    android:minHeight="320dp"
    android:id="@+id/mainLinearAddItem"
    android:layoutDirection="locale"
    android:background="@color/layer3"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5.7"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/checkState"
            android:visibility="gone"
            android:layout_weight="1"
            android:text="@string/request_state"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5.2"
            android:id="@+id/serialValue"
            android:visibility="gone"

            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"

            android:textColor="@color/text_view_color"
            android:textSize="12sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/item_serial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:text="000"
            android:textColor="@color/radio_group"
           android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:layout_weight="1"
            android:text="000"
            android:textColor="@color/colorPrimaryDark"
           android:textSize="12sp" />

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"

            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            android:background="@color/colorblue1"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="test"
            android:textColor="@color/add_button"
           android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:background="@color/text_view_color"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="5.3"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_unit"

            android:textColor="@color/text_view_color"
           android:textSize="12sp"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/unit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="9dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@color/layer2"
            android:gravity="center"
            android:padding="3dp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/textQty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textStyle="bold"

            android:text="@string/weight"
            android:textColor="@color/text_view_color"
           android:textSize="12sp" />

        <EditText
            android:id="@+id/unitQty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="true"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center"
            android:imeOptions="actionNext"

            android:inputType="numberDecimal" />
        <TextView
            android:id="@+id/generateSerial"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"

            android:textStyle="bold"
            android:drawablePadding="5dp"
            android:layout_gravity="center_vertical"
            android:drawableStart="@drawable/ic_add_circle_outline_blue_24dp"
            android:textSize="12sp"
            android:gravity="center"
            android:imeOptions="actionNext"

            android:inputType="numberDecimal"
            android:drawableLeft="@drawable/ic_arrow_right_24dp" />
        <EditText
            android:id="@+id/un2012542"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:enabled="false"

            android:gravity="center"
            android:visibility="invisible"
            android:imeOptions="actionNext"

            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/pricee"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_weight="1"

            android:textStyle="bold"
            android:text="@string/app_price"
            android:textColor="@color/text_view_color"
           android:textSize="12sp" />

        <EditText
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:inputType="numberDecimal"
            android:text="0"
            android:textColor="@color/colorAccent"
           android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearWeight"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/textview_wieght"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:text="@string/unit_qty"
            android:textColor="@color/text_view_color"
           android:textSize="12sp" />

        <EditText
            android:id="@+id/unitWeight"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"

            android:inputType="numberDecimal"
            />

        <CheckBox
            android:id="@+id/use_weight"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="@string/use_weight"
            android:checked="true"
            android:textColor="@color/text_view_color" />

    </LinearLayout>

