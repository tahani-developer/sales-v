    <LinearLayout
        android:id="@+id/_linear_switch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_weight="5.3"

        android:background="@drawable/back_border_shape"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"

        android:visibility="visible">



        <TextView
            android:id="@+id/discount_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back_border_dark"
            android:gravity="center"


            android:text="@string/app_disc"
            android:textColor="@color/white"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/bonext"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/layer7"

            android:textColor="@color/white"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/bonuss_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/back_border_shape"
            android:text="@string/app_bonus"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:layout_weight="5.3"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingLeft="5dp">


        <LinearLayout
            android:id="@+id/linear_bonus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/bonuss"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:textStyle="bold"
                android:text="@string/app_bonus"
                android:textColor="@color/text_view_color"
               android:textSize="12sp" />

            <EditText
                android:id="@+id/bonus"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="2"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
               android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/discount_linear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:paddingStart="2dp"
            android:paddingLeft="2dp"
            android:visibility="visible">


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="@string/app_disc"
                android:textColor="@color/text_view_color"
               android:textSize="12sp" />

            <EditText
                android:id="@+id/discount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
               android:textSize="12sp" />

            <RadioGroup
                android:id="@+id/discTypeRadioGroup"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/discValueRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="@string/app_disc_type1"
                    android:textColor="@color/text_view_color"
                   android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/discPercRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:gravity="center"
                    android:text="@string/app_disc_type2"
                    android:textColor="@color/text_view_color"
                   android:textSize="10sp" />

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/layer3"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"></LinearLayout>
    <LinearLayout
        android:id="@+id/discribtionItem_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingLeft="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:text="@string/remark"
            android:textColor="@color/text_view_color"
           android:textSize="12sp" />

        <EditText
            android:id="@+id/item_note"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

           android:textSize="12sp" />

    </LinearLayout>
