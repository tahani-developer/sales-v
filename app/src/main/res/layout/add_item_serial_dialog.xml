    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/mainRequestLinear"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_weight="5">
        <LinearLayout
            android:id="@+id/requestLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="2dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/text120"
                android:visibility="visible"
                android:layout_weight="1"
                android:text="@string/requestForAdmin"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>

            <ImageView
                android:id="@+id/requestDiscount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:src="@drawable/refresh2"

                android:drawableLeft="@drawable/ic_done_black_24dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/resultLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            android:layout_weight="1">
            <TextView
                android:id="@+id/checkStateResult"
                android:visibility="visible"
                android:layout_weight="1"
                android:text="@string/request_state"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>
            <ImageView
                android:id="@+id/acceptDiscount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:src="@drawable/ic_done_blue_24dp"

                android:drawableLeft="@drawable/ic_done_black_24dp"
                />
            <ImageView
                android:id="@+id/rejectDiscount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"

                android:layout_weight="1"
                android:visibility="gone"
                android:src="@drawable/ic_block_red_24dp"

                android:drawableLeft="@drawable/ic_done_black_24dp"
                />
            <ImageView
                android:id="@+id/defaultDiscount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:src="@drawable/ic_info_black_24dp"

                android:drawableLeft="@drawable/ic_done_black_24dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/serialNo_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5.5"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:visibility="visible">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5.2"
            android:text="@string/SerialNo"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/text_view_color"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/serialScan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center"
            android:src="@drawable/ic_playlist_add_black_24dp" />

        <ImageView
            android:id="@+id/serialScanBunos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center"
            android:src="@drawable/ic_local_offer_black_24dp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/serial_No_recyclerView"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3.9"
        android:background="@color/white"
       android:textSize="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="4.8"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addToList"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"

            android:layout_marginBottom="10dp"
            android:background="@color/colorblue1"
            android:text="@string/app_add_to_list"
            android:textColor="@color/layer5"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cancel0000"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="2dp"

            android:background="@color/cancel_button"
            android:text="@string/app_cancel"
            android:textColor="@color/layer5"
            android:textStyle="bold"
            android:visibility="invisible" />

        <Button
            android:id="@+id/cancelAdd"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"
            android:background="@color/cancel_button"
            android:text="@string/app_cancel"
            android:textColor="@color/layer5"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
