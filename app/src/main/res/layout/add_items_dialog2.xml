<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:minWidth="1000dp"
    android:minHeight="500dp"
    android:layoutDirection="rtl"
    android:id="@+id/add_item"
    android:background="@color/layer3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/layer2"

        android:orientation="horizontal"
        android:padding="5dp">
        <CheckBox
            android:id="@+id/greaterZero_checkbox"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="1dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0"
            android:text="@string/greatZero"
            android:textColor="@color/text_view_color"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/searchBarcode"
            android:layout_height="40dp"
            android:layout_width="30dp"
            android:src="@drawable/search_btn"
            android:layout_weight="0"/>

        <TextView
            android:id="@+id/runApp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:text="0"
            android:textColor="@color/colorblue_dark"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/barcode"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="3"
            android:inputType="text"
            android:lines="1"
            android:background="@drawable/back_border_edit"
            android:gravity="center"

            android:padding="3dp" />
        <TextView
            android:id="@+id/clearBarcode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:drawableRight="@drawable/ic_clear_black_24dp"
            android:textColor="@color/colorblue_dark"
            android:textSize="12sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center"
            android:text="@string/barcode"
            android:textColor="@color/done_button"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        >
        <TextView
            android:id="@+id/textViewItemName"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:fontFamily="cursive"
            android:text="@string/app_add_items"
            android:textColor="@color/text_view_color"
            android:textSize="25sp" />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:background="@drawable/back_border_edit"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/firstSpinerLable"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@string/category" />

        <Spinner
            android:id="@+id/cat"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:padding="3dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
        android:layout_marginLeft="20dp"

            android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:background="@drawable/back_border_edit"
            android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@string/kind_item" />

        <Spinner
            android:id="@+id/spinner_kind_item"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:padding="3dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
          />
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/back_border_edit"
            android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textSize="16sp"
            android:text="@string/item_name" />

        <EditText
            android:id="@+id/mSearch"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:layout_marginLeft="2dp"


            />
            <TextView
                android:id="@+id/clearText"

                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_gravity="center"
                android:layout_marginLeft="1dp"

                android:gravity="center"
                android:drawableRight="@drawable/ic_clear_black_24dp"
                />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="5dp"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        >

    </LinearLayout>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorblue_dark"

        android:id="@+id/HeaderNewLin"

        android:padding="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/item_name"
            android:textColor="@color/white"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/qty"
            android:textColor="@color/white"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/app_price"
            android:textColor="@color/white"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"

            android:textColor="@color/white"
            android:textStyle="bold" />

    </TableRow>
    <ProgressBar

        android:id="@+id/progress_circular"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="3"
        android:visibility="visible"


        />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/allitemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefresh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_container"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:visibility="visible"
            app:spanCount="2"

            >

        </androidx.recyclerview.widget.RecyclerView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        <CheckBox
            android:id="@+id/orientation_checkbox"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:button="@drawable/custom_checkbox"
            android:checked="true"
            android:gravity="top"
            android:textColor="@color/text_view_color"

            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <CheckBox
            android:id="@+id/Smallericon_checkbox"

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/orientation_checkbox"
            android:layout_gravity="center"

            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"

            android:layout_marginRight="5dp"
            android:clickable="true"
            android:gravity="top"
            android:textColor="@color/text_view_color"
            android:textSize="12sp"
            android:textStyle="bold"

            />

    </RelativeLayout>
   <ListView
        android:id="@+id/itemsListView"
        android:layout_marginHorizontal="20dp"
        android:background="@color/white"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        />
    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="4"
        android:visibility="gone"
        android:text="Not Found" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/done"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/done_button"
            android:gravity="center"
            android:text="@string/app_done"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/cancel_button"
            android:gravity="center"
            android:text="@string/app_cancel"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>