<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="800dp"
    android:layout_height="450dp"
    android:minWidth="800dp"
    android:minHeight="450dp"
    android:background="@color/layer7"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/layer6"

        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/barcode"
            android:textColor="@color/colorblue_dark"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/barcode"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:drawableRight="@drawable/ic_clear_black_24dp"
            android:layout_marginRight="40dp"
            android:layout_weight="3"
            android:background="@drawable/back_border_edit"
            android:gravity="center"

            android:padding="3dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/scanbarcode"
            android:textColor="@color/colorblue_dark"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/searchBarcode"
            android:layout_height="40dp"
            android:layout_width="0dp"
            android:src="@drawable/search_btn"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        >
        <TextView
            android:id="@+id/textViewItemName"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:fontFamily="cursive"
            android:text="@string/app_add_items"
            android:textColor="@color/text_view_color"
            android:textSize="25sp" />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_border_edit"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/category"
                android:textColor="@color/colorblue_dark"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/cat"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:padding="3dp"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"

                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/back_border_edit"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorblue_dark"
                android:gravity="center"
                android:textSize="18sp"
                android:text="@string/kind_item" />

            <Spinner
                android:id="@+id/spinner_kind_item"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:padding="3dp"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/back_border_edit"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorblue_dark"
                android:gravity="center"
                android:textSize="16sp"
                android:text="@string/item_name" />

            <EditText
                android:id="@+id/mSearch"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:layout_marginLeft="10dp"


                />
        </LinearLayout>

    </LinearLayout>
