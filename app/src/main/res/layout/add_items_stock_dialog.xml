    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingVertical="6dp"
        android:orientation="horizontal"
        android:background="@color/colorblue_dark"
        android:id="@+id/cardView"
        android:layoutDirection="locale"
        >


        <TextView
            android:id="@+id/textViewIte"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"

            android:text="@string/item_name"
            android:textColor="@color/white"
            android:textColorLink="@color/colorPrimary"
            />
        <!--//textViewTradeMark-->

        <TextView
            android:id="@+id/textViewItemNum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center"
            android:padding="2dp"

            android:text="@string/availableQty"
            android:textColor="@color/white"
            android:textColorLink="@color/colorPrimary" />

        <TextView
            android:id="@+id/textViewUnit_qty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/requiredQty"
            android:textColor="@color/white"
            android:textColorLink="@color/colorPrimary" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_marginHorizontal="2dp"
        android:background="@color/white"
        android:padding="7dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

    </androidx.recyclerview.widget.RecyclerView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/done2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/done_button"
            android:gravity="center"
            android:text="@string/app_done"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/done20202"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:visibility="invisible"
            android:background="@drawable/done_button"
            android:gravity="center"
            android:text="@string/app_done"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/cancel_button"
            android:gravity="center"
            android:text="@string/app_cancel"
            android:textColor="@color/white" />
    </LinearLayout>

