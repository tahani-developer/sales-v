<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layoutDirection="locale"
    android:id="@+id/linear"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="2dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/cardView"
        android:layoutDirection="locale"
        >


        <TextView
            android:id="@+id/textViewItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="2dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textColorLink="@color/colorPrimary"
            />
<!--//textViewTradeMark-->

        <TextView
            android:id="@+id/textViewItemNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="2dp"
            android:visibility="gone"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textColorLink="@color/colorPrimary" />

        <TextView
            android:id="@+id/textViewUnit_qty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="2dp"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textColorLink="@color/colorPrimary" />
        <EditText
            android:id="@+id/editQty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="2dp"
            android:inputType="numberDecimal"
            android:background="@drawable/back_border_edit"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textColorLink="@color/colorPrimary" />

    </LinearLayout>

    <androidx.cardview.widget.CardView

        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:cardBackgroundColor="@color/layer7"
        android:layout_margin="5dp"
        android:elevation="20dp"
        app:cardCornerRadius="5dp">


        <LinearLayout
            android:id="@+id/linear3"
            android:layoutDirection="locale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"

            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                >

                <!--                <ImageView-->
                <!--                    android:id="@+id/imagespecial"-->
                <!--                    android:layout_width="50dp"-->
                <!--                    android:layout_height="50sp"-->
                <!--                    android:text="Test Item"-->
                <!--                    android:layout_gravity="left"-->
                <!--                    android:visibility="visible"-->

                <!--                    android:src="@drawable/specialred"-->
                <!--                 />-->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imagespecial"
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:src="@drawable/specialred"
                    android:text="Test Item"
                    android:visibility="gone"
                    app:civ_border_color="@color/colorPrimaryDark" />



            </LinearLayout>



            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_border_edit"
                android:padding="3dp">




                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_margin="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/item_name"
                        android:textColor="@color/layer5"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textViewTradeMark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/layer5"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_margin="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category"
                        android:visibility="gone"
                        android:textColor="@color/colorblue_dark"
                        android:textSize="12sp"


                        />

                    <TextView
                        android:id="@+id/textViewCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/category"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginLeft="1dp"
                        android:layout_marginStart="1dp"
                        android:textColor="@color/text_view_color"
                        android:textSize="12sp"
                        />

                </TableRow>





                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/background_container"
                    android:layout_margin="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tax"
                        android:textColor="@color/colorblue_dark"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/textViewTax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/text_view_color"
                        android:textSize="12sp"
                        />
                </TableRow>
                <TextView

                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:layout_marginTop="3dp"

                    android:background="@color/layer5"
                    />
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_margin="2dp">

                    <TextView
                        android:id="@+id/textViewPricee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_price"
                        android:visibility="invisible"
                        android:textColor="@color/layer5"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/textViewPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/redlighht"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="200  JD"


                        app:autoSizeMaxTextSize="16sp"
                        app:autoSizeMinTextSize="10sp"
                        app:autoSizeStepGranularity="1sp"
                        app:autoSizeTextType="uniform" />

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="gone"
                    android:layout_margin="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/barcode"
                        android:textColor="@color/text_view_color"
                        android:textSize="12sp"
                        android:visibility="invisible"
                        />

                    <TextView
                        android:id="@+id/textViewBarcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/second_color"
                        android:textSize="12sp"
                        android:visibility="invisible" />

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="gone"
                    android:layout_margin="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pos_price"
                        android:textColor="@color/text_view_color"
                        android:textSize="12sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/textViewPosPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/second_color"
                        android:textSize="12sp"
                        android:visibility="visible" />

                </TableRow>

            </TableLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>