    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.95"
        android:layout_margin="1dp"
        android:background="@drawable/back_border_edit"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:elevation="2dp"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/VisitStatus"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />


        <Spinner
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.95"
        android:layout_margin="1dp"
        android:background="@drawable/back_border_edit"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:elevation="2dp"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/date"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_date_range_black_24dp"

            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/add_button"
            android:textSize="14sp"
            android:inputType="date"
            android:focusable="false"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.95"
        android:layout_margin="1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:elevation="2dp"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/CustomerName"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/cust"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_baseline_search_blacksource_24"

            android:background="@drawable/back_border_edit"
            android:layout_weight="1"
            android:enabled="true"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center"
            android:imeOptions="actionNext"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0"
        android:padding="3dp"
        android:id="@+id/showlocation_lin"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/showlocation"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/showlocation"
            android:textStyle="bold"
            android:textColor="@color/red_background"

            android:textSize="20sp"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_weight="2"
            android:visibility="invisible"
            android:padding="3dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:background="@drawable/back_border_edit"
            android:textColor="@color/done_button"
            android:textSize="14sp"
            />
    </LinearLayout>
</LinearLayout>


    <LinearLayout
