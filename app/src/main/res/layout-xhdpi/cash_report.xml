<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:textDirection="locale"
    android:id="@+id/mailLayout"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="817dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"

        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"


            android:gravity="center_vertical"
            android:text="@string/app_cash_report"
            android:textColor="@color/text_view_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:text="@string/date"
                android:gravity="center"
                android:textColor="@color/text_view_color"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/date_editReport_cash"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:inputType="date"
                android:textColor="@color/add_button"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/dat"
                android:layout_width="100dp"
                android:visibility="invisible"
                android:layout_height="match_parent"
                android:inputType="date"
                android:textColor="@color/add_button"
                android:textSize="14sp" />


            <Button
                android:id="@+id/preview_cash_report"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="100dp"
                android:textSize="14sp"
                android:background="@drawable/done_button"
                android:text="@string/preview"
                android:textColor="@color/text_view_color" />

            <Button
                android:id="@+id/print_cash_report"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="80dp"
                android:background="@color/colorblue1"
                android:text="@string/print"
                android:textColor="@color/text_view_color"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/pic_reportCash"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:visibility="invisible" />
        </LinearLayout>


    </LinearLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/TableSalesReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row2">
        <TableRow
            android:layout_marginTop="5dp"
            android:background="@color/colorblue1">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="1dp"
                android:text="@string/sales"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </TableRow>
        <TableRow
            android:background="@color/layer3"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="1dp"
                android:text="@string/cash_sale"
                android:textColor="@color/text_view_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_cash_sales"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="1dp"
                android:textColor="@color/text_view_color"
                android:textSize="12sp"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:background="@color/layer3"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="1dp"
                android:text="@string/credit_sales"
                android:textColor="@color/text_view_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_credit_sales"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="1dp"
                android:textColor="@color/text_view_color"
                android:textSize="12sp"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:background="@color/layer3"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="1dp"
                android:text="@string/total_sales"
                android:textColor="@color/done_button"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_total_sales"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="1dp"
                android:textColor="@color/text_view_color"
                android:textSize="12sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/TablePaymentReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TableSalesReport">
        <TableRow
            android:layout_marginTop="5dp"
            android:background="@color/colorblue1">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="1dp"
                android:text="@string/payment"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </TableRow>
        <TableRow
            android:layout_marginTop="2dp"
            android:background="@color/layer3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="1dp"
                android:text="@string/cash"
                android:textColor="@color/text_view_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_cash_PaymentReport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="1dp"

                android:textColor="@color/text_view_color"
                android:textSize="12sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_marginTop="2dp"
            android:background="@color/layer3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="1dp"
                android:text="@string/app_cheque"
                android:textColor="@color/text_view_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_cheque_paymentReport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="1dp"
                android:textColor="@color/text_view_color"
                android:textSize="12sp"

                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_marginTop="2dp"
            android:background="@color/layer3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="1dp"
                android:text="@string/netpayment"
                android:textColor="@color/done_button"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_net_paymentReport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="1dp"
                android:textColor="@color/text_view_color"
                android:textSize="12sp"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:layout_marginTop="5dp"
            android:background="@color/colorblue1">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="1dp"
                android:text="@string/app_creditCard"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </TableRow>
        <TableRow
            android:layout_marginTop="2dp"
            android:background="@color/layer3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="1dp"
                android:text="@string/credit_value"
                android:textColor="@color/text_view_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_credit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="1dp"
                android:textColor="@color/text_view_color"
                android:textSize="12sp"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:layout_marginTop="2dp"
            android:background="@color/layer3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="1dp"
                android:text="@string/total_cash"
                android:textColor="@color/done_button"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_total_cash"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="1dp"
                android:textColor="@color/text_view_color"
                android:textSize="12sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>