<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="570dp"
    android:minWidth="400dp"
    android:minHeight="550dp"
    android:id="@+id/add_item"
    android:padding="10dp"
    android:layoutDirection="locale"
    android:background="@color/layer7"
    android:orientation="vertical">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"

        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/barcodeLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@color/layer6"

        android:orientation="horizontal">
        <ImageView
            android:id="@+id/searchBarcode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:padding="5dp"
            android:src="@drawable/ic_search_black_24dp" />


        <EditText
            android:id="@+id/barcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="4"
            android:inputType="text"
            android:lines="1"
            android:background="@drawable/back_border_edit"
            android:hint="Type  barcode"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center"
            android:text="@string/barcode"
            android:textColor="@color/colorblue_dark"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/clearBarcode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:drawableRight="@drawable/ic_clear_black_24dp"
            android:textColor="@color/colorblue_dark"
            android:textSize="12sp" />




        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/scanbarcode"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>
            <CheckBox
                android:id="@+id/greaterZero_checkbox"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="1dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:checked="false"
                android:layout_weight="0"
                android:text="@string/greatZero"
                android:textColor="@color/text_view_color"
                android:textSize="12sp"
                android:textStyle="bold"
                />
    <LinearLayout
        android:id="@+id/kindLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="5"
        android:gravity="bottom"
        android:orientation="horizontal"

        android:paddingVertical="6dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="5dp"

            android:background="@drawable/back_border_edit"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"

                android:text="@string/kind_item"

                android:textColor="@color/colorblue_dark"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/spinner_kind_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_weight="1"

                />
            <androidx.appcompat.widget.SearchView
                android:id="@+id/mSearch55055"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.9"
                android:visibility="invisible"
                app:defaultQueryHint="Search.." />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/categoryLinear"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_weight="5"
        android:padding="5dp"
        android:background="@drawable/back_border_edit"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="@string/category"
            android:textColor="@color/colorblue_dark"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp" />
        <androidx.appcompat.widget.SearchView
            android:id="@+id/mSearch5555"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:visibility="invisible"

            app:defaultQueryHint="Search.." />
    </LinearLayout>
    <TextView
        android:id="@+id/textViewItemName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="@string/app_add_items"
        android:textColor="@color/text_view_color"
        android:textSize="25sp"
        android:visibility="gone" />
    <LinearLayout
        android:id="@+id/searchLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:paddingVertical="6dp"
        android:orientation="vertical"
       >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="@drawable/back_border_edit"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"

                android:text="@string/item_name"
                android:textColor="@color/colorblue_dark"
                android:textSize="12sp" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/mSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                app:defaultQueryHint="Search.." />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@drawable/back_border_edit"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"

            android:text="@string/item_name"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/mSearch6841"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            app:defaultQueryHint="Search.." />

    </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">


        <RelativeLayout
                android:visibility="visible"
                android:id="@+id/allitemLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:gravity="center"
           >
           <ImageView
               android:layout_height="70dp"
               android:layout_width="50dp"
               android:layout_centerInParent="true"
               android:src="@drawable/ic_baseline_loading_24"
               />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="4"

                android:orientation="horizontal"
                android:padding="2dp"
                android:visibility="visible"
                app:spanCount="2">

            </androidx.recyclerview.widget.RecyclerView>

            <CheckBox
                android:id="@+id/orientation_checkbox"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"

                android:checked="true"
                android:gravity="bottom"
                android:textColor="@color/text_view_color"

                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <CheckBox
                android:id="@+id/Smallericon_checkbox"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/orientation_checkbox"
                android:layout_gravity="center"

                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"

                android:layout_marginRight="5dp"
                android:clickable="true"
                android:gravity="top"
                android:textColor="@color/text_view_color"
                android:textSize="12sp"
                android:textStyle="bold"

                />
                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@color/colorblue_dark"

                    android:id="@+id/HeaderNewLin"

                    android:padding="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/item_name"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/qty"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/app_price"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"

                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </TableRow>
            </RelativeLayout>

            <ListView
                android:id="@+id/itemsListView"
                android:layout_marginHorizontal="5dp"
                android:background="@color/white"
                android:padding="2dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:orientation="vertical"

                />
            <TextView
                android:id="@+id/empty_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="4"
                android:visibility="gone"
                android:text="Not Found" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@drawable/back_border_edit"
        android:orientation="horizontal"
        android:visibility="gone">
        </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLinear"

        android:layout_width="match_parent"
        android:layout_height="40sp"

        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/done"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/done_button"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="10sp"
            android:text="@string/app_done"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1.3"
            android:background="@color/cancel_button"
            android:gravity="center"
            android:text="@string/app_cancel"
            android:textColor="@color/white"
            android:visibility="invisible" />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:background="@drawable/cancel_button"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/app_cancel"
            android:textColor="@color/white" />
    </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>