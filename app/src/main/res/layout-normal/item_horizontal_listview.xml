<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layoutDirection="locale"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView

        android:id="@+id/cardView"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/layer7"
        android:layout_margin="2dp"
        android:elevation="5dp"
        app:cardCornerRadius="20dp">


        <LinearLayout
            android:id="@+id/linear"
            android:layoutDirection="locale"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:orientation="vertical"
           >

                <!--                <ImageView-->
                <!--                    android:id="@+id/imagespecial"-->
                <!--                    android:layout_width="50dp"-->
                <!--                    android:layout_height="50sp"-->
                <!--                    android:text="Test Item"-->
                <!--                    android:layout_gravity="left"-->
                <!--                    android:visibility="visible"-->

                <!--                    android:src="@drawable/specialred"-->
                <!--                 />-->
                <ImageView
                    android:id="@+id/imagespecial"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_photo_red_24dp"
                    android:text="Test Item"
                    android:visibility="gone"
                    app:civ_border_color="@color/colorPrimaryDark" />


<!--                <ScrollView-->
<!--                    android:layout_height="match_parent"-->

<!--                    android:layout_width="match_parent"-->
<!--                    >-->
                <TextView
                    android:id="@+id/textViewItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"

                    android:background="@drawable/back_border_shape"
                    android:lines="1"
                    android:maxLines="1"

                    android:gravity="center"
                    android:scrollbars = "vertical"



                    android:textColor="@color/layer7"
                    android:textSize="14sp"



                    />
<!--                </ScrollView>-->


            </LinearLayout>


            <!--            <LinearLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:gravity="center"-->
            <!--                android:orientation="horizontal"-->
            <!--                android:padding="3dp">-->

            <!--                <TextView-->
            <!--                    android:id="@+id/textViewItemName"-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:text="Test Item"-->
            <!--                    android:textColor="@color/layer5"-->
            <!--                  android:textSize="12sp" />-->

            <!--            </LinearLayout>-->

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_container"
                    android:id="@+id/rowItemNumber"
                    android:layout_margin="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/No"
                        android:visibility="gone"
                        android:textColor="@color/redlighht"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textViewItemNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1456394518541"
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp"
                        android:gravity="center"
                        android:textColor="@color/text_view_color"
                        android:textSize="12sp" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_margin="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/item_name"
                        android:textColor="@color/layer5"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textViewTradeMark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/layer5"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_container"
                    android:layout_margin="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category"
                        android:textColor="@color/colorblue_dark"
                        android:textSize="12sp"


                     />

                    <TextView
                        android:id="@+id/textViewCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp"
                        android:textColor="@color/text_view_color"
                        android:textSize="12sp"
                        />

                </TableRow>

                <TableRow
                    android:id="@+id/row_qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_container"
                    android:visibility="visible"
                    android:layout_margin="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/qty"
                        android:textColor="@color/colorblue_dark"
                        android:textSize="12sp"
 />

                    <TextView
                        android:id="@+id/textViewUnit_qty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/text_view_color"
                        android:textSize="12sp"
 />

                </TableRow>



                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rowTax"
                    android:background="@drawable/background_container"
                    android:layout_margin="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tax"
                        android:textColor="@color/colorblue_dark"
                        android:textSize="12sp"
 />

                    <TextView
                        android:id="@+id/textViewTax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/text_view_color"
                        android:textSize="12sp"
 />
                </TableRow>
                <TableRow
                    android:id="@+id/table_solidQty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_container"
                    android:layout_margin="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/solidQty"
                        android:textColor="@color/colorblue_dark"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/textViewsolidQty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/text_view_color"
                        android:textSize="12sp"
                        />
                </TableRow>
                <TextView

                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"

                    android:background="@color/layer5"
                    />
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp">

                    <TextView
                        android:id="@+id/textViewPricee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="@string/app_price"

                        android:textColor="@color/layer5"
                        android:textSize="12sp"
 />

                    <TextView
                        android:id="@+id/textViewPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/redlighht"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="200  JD"
                        app:autoSizeMaxTextSize="16sp"
                        app:autoSizeMinTextSize="10sp"
                        app:autoSizeStepGranularity="1sp"
                        app:autoSizeTextType="uniform" />

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="gone"
                    android:layout_margin="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/barcode"
                        android:textColor="@color/text_view_color"
                        android:textSize="12sp"
                        android:visibility="invisible"
                        />

                    <TextView
                        android:id="@+id/textViewBarcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/second_color"
                        android:textSize="12sp"
                        android:visibility="invisible" />

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="gone"
                    android:layout_margin="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pos_price"
                        android:textColor="@color/text_view_color"
                        android:textSize="12sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/textViewPosPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/second_color"
                        android:textSize="12sp"
                        android:visibility="visible" />

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:visibility="gone"
        app:cardBackgroundColor="@color/layer7"
        android:id="@+id/NewLin"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewItemName_"
            android:layout_width="match_parent"
            android:background="@drawable/background_container"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:lines="1"
            android:maxLines="1"
            android:gravity="center"
            android:scrollbars = "vertical"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/textViewUnit_qty_"
            android:background="@drawable/background_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:lines="1"
            android:maxLines="1"
            android:layout_weight="1"
            android:gravity="center"
            android:scrollbars = "vertical"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/textViewPrice_"
            android:layout_width="match_parent"
            android:background="@drawable/background_container"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"

            android:textStyle="bold"
            android:text="200  JD"
            android:textSize="14sp"
            />
        <ImageView
            android:id="@+id/imagespecial_"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:src="@drawable/ic_photo_red_24dp"
            android:text="Test Item"

            app:civ_border_color="@color/colorPrimaryDark" />
    </LinearLayout>
</LinearLayout>