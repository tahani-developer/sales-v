<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale"
    android:background="@color/white"
    android:id="@+id/linearMain"
    android:orientation="vertical"
    android:padding="2dp">
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:layout_weight="8.8"
        android:layout_margin="2dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"

        >

        <TextView
            android:id="@+id/print"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="9"
            android:visibility="gone"
            android:gravity="center"
            android:padding="2dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="2"
            android:text="@string/AccountStatment"
            android:textColor="@color/colorblue_dark"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:autoSizeTextType="uniform"
            android:textSize="14sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeMaxTextSize="14sp"
            android:autoSizeMinTextSize="12sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_person_black_24dp" />
        <TextView
            android:id="@+id/customerName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/back_border_edit"
            android:gravity="center"
            android:text=""
            android:textColor="@color/text_view_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/getAccountList_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:layout_weight="1.5"
  />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/row221"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8.8"

        android:orientation="horizontal"
        android:padding="2dp"
        >

        <TextView
            android:id="@+id/last"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/colorblue_dark"
            android:autoSizeTextType="uniform"
            android:textSize="14sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeMaxTextSize="14sp"
            android:autoSizeMinTextSize="12sp"
            android:textStyle="bold"
            android:text="@string/last_visit"
            android:drawableStart="@drawable/ic_account_balance_black_b_24dp"

            android:drawableLeft="@drawable/ic_account_balance_black_b_24dp" />
        <TextView
            android:id="@+id/last_visit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/back_border_edit"
            android:gravity="center"
            android:text=""
            android:textColor="@color/text_view_color"
            android:textSize="14sp" />
        <Spinner
            android:id="@+id/cat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:layout_weight="2.3"
            android:visibility="gone"

            android:gravity="center"
            android:padding="3dp" />
        <Button
            android:id="@+id/preview_button_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_weight="3"
            android:background="@drawable/done_button"
            android:text="@string/preview"
            android:textColor="@color/colorblue_dark" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:layout_width="match_parent">
        <HorizontalScrollView
            android:id="@+id/HorizontalScrollView01"
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:scrollbars="horizontal"
            android:layout_height="match_parent"

            >

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:layout_width="match_parent">
<!--    <LinearLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_marginLeft="5dp"-->
<!--        android:layout_marginTop="2dp"-->
<!--        android:layout_marginRight="5dp"-->
