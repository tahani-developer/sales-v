        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10.5"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/colorblue_dark"
            android:padding="2dp">


            <TextView
                android:id="@+id/textView_voucherNo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/voucherNo"

                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@color/colorblue1"
            android:textSize="12sp"
            android:textStyle="bold" />


            <TextView
                android:id="@+id/textView_transName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/transName"
                android:textColor="@color/white"
                android:textStyle="bold" />
        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@color/colorblue1"
            android:textSize="12sp"
            android:textStyle="bold" />


            <TextView
                android:id="@+id/textView_date_voucher"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/date_voucher"
                android:textColor="@color/white"
                android:textStyle="bold" />
        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@color/colorblue1"
            android:textSize="12sp"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_debit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/debit"
                android:textColor="@color/white"
                android:textStyle="bold" />
        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@color/colorblue1"
            android:textSize="12sp"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_cridit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/credit"
                android:textColor="@color/white"
                android:textStyle="bold" />
        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@color/colorblue1"
            android:textSize="12sp"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_balance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/balance"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </TableRow>
<!--    </LinearLayout>-->

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"

        android:layout_margin="2dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_report"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:padding="2dp"
            android:layout_margin="2dp"
            android:background="@drawable/back_border_edit"

            android:orientation="vertical"
            >

        </androidx.recyclerview.widget.RecyclerView>

